<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bit189.haroo.dao.TutorDao">

<resultMap id="tutorMap" type="tutor">
    <id column="tno" property="no"/>
    <result column="tintro" property="intro"/>
    <result column="tappl" property="application"/>
    <result column="rdttm" property="promotedDate"/>
  
  <association property="tutorDistricts" javaType="Sigungu">
      <id column="sgg_no" property="no"/>
      <result column="sgg_name" property="SigunguName"/>
      <result column="sido_name" property="SidoName"/>
      <result column="nickname" property="nickname"/>
    </association> 
    
    <association property="tutorCategories" javaType="BroadCategory">
      <id column="ncat_no" property="no"/>
      <result column="profile_pic" property="profilePicture"/>
      <result column="name" property="name"/>
      <result column="nickname" property="nickname"/>
    </association> 
    
  </resultMap>

<insert id="insert" parameterType="tutor">
  </insert>
  
  <select id="findByKeyword" resultMap="tutor" parameterType="string">
    select 
      t.tno,
      t.tintro,
      t.tappl,
      t.rdttm,
      m.name,
      m.email,
      m.profile_pic,
      m.tel,
      m.nickname,
      m.sex 
    from har_tutor t
      inner join har_member m on m.mno=t.tno 
    <where>
      <if test="keyword != null and keyword != ''">
      name like concat('%', #{keyword}, '%')
      or email like concat('%', #{keyword}, '%')
      or tel like concat('%', #{keyword}, '%')
      or nickname like concat('%', #{keyword}, '%')
      or tno like concat('%', #{keyword}, '%')
      </if>
    </where>
    order by t.tno asc 
  </select>
  
  
  <delete id="delete" parameterType="int">
  delete from har_tutor 
    where tno=#{value}
  </delete>
  
  </mapper>